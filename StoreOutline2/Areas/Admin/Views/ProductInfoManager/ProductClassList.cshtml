@model List<ProductClassModel>
@{ 
    ViewBag.Title = "GeneralType List";
}
<div class="jumbotron">
    <h1>Product Class List</h1>
</div>
@if (TempData["deleted"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show m-5" role="alert">
        @TempData["deleted"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@{
    if (Model.Count == 0)
    {
        <h1 class="bg-danger">There are currently no Product classes in the DataBase</h1>
    }
    else
    {
        <table class="table bg-white table-bordered table-striped container">
            <thead>
                <tr>
                    <th class="col-3">Product Class</th>
                    <th></th>
                </tr>
            </thead> 
            <tbody>
                @foreach (var pClass in Model)
                {
                    <tr>
                        <td>@pClass.Class</td>
                        <td class="col-1"><a asp-action="AddEditBrand" asp-route-id="@pClass.Id" class="btn btn-secondary">Edit</a></td>
                        <td class="col-1"><a asp-action="Delete" asp-route-category="ProductClass" asp-route-id="@pClass.Id" asp-route-name="@pClass.Class" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

