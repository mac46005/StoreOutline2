@model List<ProductTypeModel>
@{
    ViewBag.Title = "SubType List";
}git 
<div class="jumbotron">
    <h1>Product Type List</h1>
</div>
@if (TempData["deleted"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["deleted"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@{
    if (Model.Count == 0)
    {
        <h1 class="bg-danger">There are currently no Product Types in the DataBase</h1>
    }
    else
    {
        <table class="table bg-white table-bordered table-striped container">
            <thead>
                <tr>
                    <th class="col-3">Product Type</th>
                    <th class="col-5">Product Class</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pType in Model)
                {
                    <tr>
                        <td>@pType.Type</td>
                        <td>@pType.ProductClass_Id</td>
                        <td class="col-1"><a asp-action="AddEditSubType" asp-route-id="@pType.Id" class="btn btn-secondary">Edit</a></td>
                        <td class="col-1"><a asp-action="Delete" asp-route-category="SubType" asp-route-id="@pType.Id" asp-route-name="@pType.ProductType" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
}